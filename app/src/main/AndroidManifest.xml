<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.customapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CustomApp.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CustomApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".IdeasActivity"
            android:theme="@style/Theme.CustomApp.NoActionBar"/>
        <activity android:name=".fragment.draft.AddEditDraft"/>
        <activity android:name=".fragment.block.blockideas.BlockIdeas"/>
        <activity android:name=".fragment.block.blockideas.AddEditIdeas"/>
        <activity android:name=".fragment.source.AddEditSource"/>
        <activity android:name=".fragment.source.internetideas.InternetIdeas"/>
        <activity android:name=".fragment.source.internetideas.AddEditInternetIdeas"/>
    </application>

</manifest>