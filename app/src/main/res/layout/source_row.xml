<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/source_row"
    android:background="@drawable/boader"
    android:layout_marginBottom="10dp"
    android:paddingHorizontal="2dp">

    <TextView
        android:id="@+id/source_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="10dp"
        android:text="Year"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/source_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/source_editButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:paddingHorizontal="10dp"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/source_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/source_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:paddingHorizontal="10dp"
        android:text="Author"
        android:textSize="20sp" />

    <Button
        android:id="@+id/source_editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Edit"
        android:textSize="20sp" />


</RelativeLayout>